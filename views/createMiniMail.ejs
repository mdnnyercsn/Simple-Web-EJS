<div class="create-mini-mail layout-container">
  <h1>Create Mini Mail</h1>
  <p>Create your mini mail :)</p>
  <form action="/v1/mail" method="POST" class="form-create-mini-mail">
    <div class="label">
      <label for="_id">Your Id : </label>
      <input type="text" name="_id" id="_id">
    </div>
    <div class="label">
      <label for="name">Your Name : </label>
      <input type="text" name="name" id="name">
    </div>
    <div class="label">
      <label for="message">Your Id : </label>
      <br>
      <textarea name="message" id="message" cols="30" rows="10"></textarea>
    </div>
    <button type="submit">Send</button>
  </form>
</div>